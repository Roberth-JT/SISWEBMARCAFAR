@model SISWEBBOTICA.ViewModels.RegistroVM
@{
    ViewData["Title"] = "Registrarse";
    Layout = null; // No usar el layout principal
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SISWEBBOTICA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/EstilosJB.css" asp-append-version="true" />

    <!-- --- INICIO DEL CÓDIGO DE USERWAY --- -->
    <script src="https://cdn.userway.org/widget.js" data-account="HuIjx9seHZ"></script>
    <style>
        .userway_buttons_wrapper, #userway-widget-container {
            top: 120px !important;
            right: -40px !important;
            position: fixed !important;
        }
    </style>
    <!-- --- FIN DEL CÓDIGO DE USERWAYHOLAAAAA --- -->
</head>
<body>
    <div class="login-container">
        <div class="login-box">
            <div class="login-form-panel">
                <div class="form-header">
                    <h2>Crear una Cuenta</h2>
                    <p>Únete a la familia SISWEBBOTICA</p>
                </div>
                <section>
                    <form asp-controller="Cuenta" asp-action="Registro" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Nombre" class="form-control" placeholder="Nombre Completo" />
                            <label asp-for="Nombre"></label>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Login" class="form-control" placeholder="usuario@ejemplo.com" />
                            <label asp-for="Login"></label>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Contrasena" class="form-control" type="password" placeholder="Contraseña" />
                            <label asp-for="Contrasena"></label>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="ConfirmarContrasena" class="form-control" type="password" placeholder="Confirmar Contraseña" />
                            <label asp-for="ConfirmarContrasena"></label>
                        </div>

                        <div class="form-floating mb-3">
                            @if ((bool?)ViewBag.PermitirAdmin == true)
                            {
                                <select asp-for="RolSeleccionado" asp-items="ViewBag.TiposUsuario" class="form-select">
                                    <option value="">-- Selecciona un Rol --</option>
                                </select>
                            }
                            else
                            {
                                <select asp-for="RolSeleccionado" class="form-select">
                                    <option value="">-- Selecciona un Rol --</option>
                                    <option value="Vendedor">Vendedor</option>
                                </select>
                            }
                            <label asp-for="RolSeleccionado"></label>
                        </div>

                        <div class="form-group mb-3">
                            <button type="submit" class="w-100 btn btn-login">REGISTRARSE</button>
                        </div>

                        <div class="form-links text-center">
                            <p>
                                ¿Ya tienes una cuenta?
                                <a asp-controller="Cuenta" asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]">Inicia sesión aquí</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>
            <div class="login-image-panel">
                <!-- Imagen de fondo -->
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
</body>
</html>