@model SISWEBBOTICA.ViewModels.LoginVM
@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = null; // No usar el layout principal
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SISWEBBOTICA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/EstilosJB.css" asp-append-version="true" />

    <!-- --- INICIO DEL CÓDIGO DE USERWAY --- -->
    <script src="https://cdn.userway.org/widget.js" data-account="HuIjx9seHZ"></script>
    <style>
        .userway_buttons_wrapper, #userway-widget-container {
            top: 120px !important;
            right: -40px !important;
            position: fixed !important;
        }
    </style>
    <!-- --- FIN DEL CÓDIGO DE USERWAY --- -->
</head>
<body>
    <div class="login-container">
        <div class="login-box">
            <div class="login-form-panel">
                <div class="form-header">
                    <h2>Iniciar Sesión</h2>
                    <p>Bienvenido de vuelta</p>
                </div>
                <section>
                    <form asp-controller="Cuenta" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="EmailOrUsername" class="form-control" placeholder="usuario@ejemplo.com" />
                            <label asp-for="EmailOrUsername"></label>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Password" class="form-control" type="password" placeholder="Contraseña" />
                            <label asp-for="Password"></label>
                        </div>

                        <div class="form-group mb-3">
                            <button type="submit" class="w-100 btn btn-login">INGRESAR</button>
                        </div>

                        <div class="form-links text-center mt-3">
                            <p>
                                ¿No tienes una cuenta?
                                <a asp-controller="Cuenta" asp-action="Registro" asp-route-returnUrl="@ViewData["ReturnUrl"]">Regístrate aquí</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>
            <div class="login-image-panel">
                <!-- Imagen de fondo -->
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
</body>
</html>