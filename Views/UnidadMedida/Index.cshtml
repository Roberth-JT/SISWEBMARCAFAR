@model IEnumerable<SISWEBBOTICA.Models.UnidadMedida>

@{
    ViewData["Title"] = "Gestión de Unidades de Medida";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <hr />

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <p>
        <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Crear Nueva Unidad</a>
    </p>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                        <th>@Html.DisplayNameFor(model => model.Simbolo)</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                            <td>@Html.DisplayFor(modelItem => item.Simbolo)</td>
                            <td>
                                @if (User.IsInRole("Administrador"))
                                {
                                    <a asp-action="Edit" asp-route-id="@item.IdUnidadMedida" class="btn btn-warning btn-sm">Editar</a>
                                    <a asp-action="Delete" asp-route-id="@item.IdUnidadMedida" class="btn btn-danger btn-sm">Eliminar</a>
                                }
                                else
                                {
                                    <span class="text-muted">No disponible</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>